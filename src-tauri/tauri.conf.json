{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "T3Lang",
  "version": "0.1.0",
  "identifier": "com.markussommer.t3lang",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "T3Lang - TYPO3 Translation Manager",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "backgroundColor": "#f0f0f0"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "resources/t3lang": "t3lang"
    },
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
